{
  "name": "@bach.software/vue-dynamic-form-element-plus",
  "type": "module",
  "version": "0.1.0",
  "description": "Element Plus components for Vue Dynamic Form",
  "author": "Jeroen Bach <jeroen@bach.software> (https://bach.software)",
  "homepage": "https://github.com/jeroenbach/dynamic-form",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeroenbach/dynamic-form.git"
  },
  "bugs": {
    "url": "https://github.com/jeroenbach/dynamic-form/issues"
  },
  "keywords": [
    "dynamic-form",
    "element-plus",
    "vue",
    "typescript"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/vue-dynamic-form-element-plus.es.js",
      "require": "./dist/vue-dynamic-form-element-plus.umd.js"
    }
  },
  "main": "./dist/vue-dynamic-form-element-plus.umd.js",
  "module": "./dist/vue-dynamic-form-element-plus.es.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && vue-tsc --emitDeclarationOnly && tsc-alias",
    "build:watch": "vite build --watch & vue-tsc --emitDeclarationOnly --watch & tsc-alias --watch",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "vitest run",
    "ci": "pnpm ci:test && pnpm ci:lint && pnpm ci:typecheck",
    "ci:test": "TZ=Europe/Amsterdam vitest run",
    "ci:lint": "eslint",
    "ci:typecheck": "vue-tsc --noEmit"
  },
  "peerDependencies": {
    "@bach.software/vue-dynamic-form": ">=0.1.0",
    "element-plus": ">=2.0.0",
    "vee-validate": ">=4.15",
    "vue": ">=3.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:dev",
    "@bach.software/vue-dynamic-form": "workspace:*",
    "@types/node": "catalog:types",
    "@vitejs/plugin-vue": "catalog:build",
    "element-plus": "catalog:framework",
    "eslint": "catalog:dev",
    "eslint-plugin-format": "catalog:dev",
    "tsc-alias": "catalog:build",
    "typescript": "catalog:types",
    "vee-validate": "catalog:framework",
    "vite": "catalog:build",
    "vitest": "catalog:test",
    "vue": "catalog:framework",
    "vue-tsc": "catalog:build"
  }
}
