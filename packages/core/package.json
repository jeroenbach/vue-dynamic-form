{
  "name": "@bach.software/vue-dynamic-form",
  "type": "module",
  "version": "0.1.3",
  "description": "A simple yet highly extendable dynamic form system, inspired by the flexibility of XSD and powered by Vee-Validate.",
  "author": "Jeroen Bach <jeroen@bach.software> (https://bach.software)",
  "homepage": "https://github.com/jeroenbach/dynamic-form",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeroenbach/dynamic-form.git"
  },
  "bugs": {
    "url": "https://github.com/jeroenbach/dynamic-form/issues"
  },
  "keywords": [
    "dynamic-form",
    "typescript",
    "vee-validate",
    "form",
    "vue"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/vue-dynamic-form.es.js",
      "require": "./dist/vue-dynamic-form.umd.js"
    }
  },
  "main": "./dist/vue-dynamic-form.umd.js",
  "module": "./dist/vue-dynamic-form.es.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "check-updates": "pnpm dlx npm-check-updates -i --format group",
    "dev": "pnpm build:watch & cd ./playgrounds/storybook && pnpm dev",
    "build": "vite build && vue-tsc --emitDeclarationOnly && tsc-alias",
    "build:watch": "vite build --watch & vue-tsc --emitDeclarationOnly --watch & tsc-alias --watch",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "vitest run",
    "prepublishOnly": "npm run ci",
    "ci": "pnpm ci:test && pnpm ci:lint && pnpm ci:typecheck",
    "ci:test": "TZ=Europe/Amsterdam vitest run",
    "ci:lint": "eslint",
    "ci:typecheck": "vue-tsc --noEmit",
    "changeset": "changeset"
  },
  "peerDependencies": {
    "vee-validate": ">=4.15",
    "vue": ">=3.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:dev",
    "@changesets/cli": "catalog:tooling",
    "@types/node": "catalog:types",
    "@vitejs/plugin-vue": "catalog:build",
    "eslint": "catalog:dev",
    "eslint-plugin-format": "catalog:dev",
    "tsc-alias": "catalog:build",
    "typescript": "catalog:types",
    "vee-validate": "catalog:framework",
    "vite": "catalog:build",
    "vitest": "catalog:test",
    "vue": "catalog:framework",
    "vue-tsc": "catalog:build"
  }
}
